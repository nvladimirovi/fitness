<section class="site_section create_product">
    <h2>Create Product</h2>
    {{#if success}}
      <h3>{{success}}</h3>
    {{/if}}
    
    <form action="/product/create" method="POST">
        <input type="hidden" name="_csrf" value="{{ _csrf }}">
        <fieldset>
            <input name="product" value="{{product}}" type="text" placeholder="Product...">
        </fieldset>

        <fieldset>
            <input name="callories" value="{{callories}}" type="float" placeholder="Callories...">
        </fieldset>

        <fieldset>
            <input name="carbs" value="{{carbs}}" type="float" placeholder="Carbs...">
        </fieldset>

        <fieldset>
            <input name="protein" value="{{protein}}" type="float" placeholder="Protein...">
        </fieldset>

        <fieldset>
            <input name="fat" value="{{fat}}" type="float" placeholder="Fat...">
        </fieldset>

        <fieldset>
            <input type="submit" value="Create">
        </fieldset>
    </form>
</section>